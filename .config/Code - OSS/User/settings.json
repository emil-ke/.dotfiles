{
  "[handlebars]": {
    "editor.suggest.insertMode": "replace",
    "editor.formatOnSave": false
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.tabSize": 4
  },
  "[go]": {
    "editor.defaultFormatter": "golang.go"
  },
  "window.title": "${dirty}${activeEditorShort}${separator}${rootName}",
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.colorTheme": "Nord",
  "workbench.colorCustomizations": {
    "tab.activeBorderTop": "#d08770",
    "tab.activeBackground": "#434c5e",
    "tab.activeForeground": "#fff",
    "tab.inactiveModifiedBorder": "#bf616a",
    "tab.activeModifiedBorder": "#bf616a"
  },
  "editor.tokenColorCustomizations": {
    "functions": "#b96faa",
    "numbers": "#ebcb8b",
    "variables": "#8fbcbb",
    "keywords": "#df6a76",
    "types": "#d08870"
  },

  "editor.formatOnPaste": true,
  "editor.minimap.enabled": false,
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "editor.tabCompletion": "on",

  "prettier.jsxSingleQuote": true,
  "prettier.semi": false,
  "prettier.singleQuote": true,
  "prettier.arrowParens": "avoid",
  "prettier.enable": true,
  "prettier.tabWidth": 2,
  "prettier.bracketSpacing": true,
  "css.validate": true,
  "explorer.sortOrder": "type",
  "editor.suggestSelection": "first",

  "terminal.external.linuxExec": "kitty",
  "terminal.integrated.env.linux": {
    "VSCODE_INTEGRATED_TERMINAL": "true"
  },
  "editor.fontFamily": "'FiraCode Nerd Font', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
  "editor.fontLigatures": true,
  "terminal.integrated.tabs.enabled": true,
  "workbench.startupEditor": "newUntitledFile",
  "explorer.confirmDelete": false
}
