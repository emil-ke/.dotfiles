{
  "[handlebars]": {
    "editor.suggest.insertMode": "replace",
    "editor.formatOnSave": true
  },
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "on",
      "strings": "on",
      "other": "on"
    },
  },
  "[python]": {
    "editor.tabSize": 4
  },
  "[go]": {
    "editor.defaultFormatter": "golang.go"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "window.title": "${dirty}${activeEditorShort}${separator}${rootName}",
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.colorCustomizations": {
    "[Hyper Term Black]": {
      "editor.foreground": "#fff",
      "terminal.foreground": "#fff"
    },
    "[Tokyo Night]": {
      "editor.foreground": "#e5e6e7",
      "terminal.foreground": "#e5e6e7"
    },

    "tab.activeBorderTop": "#95dba7",
    "tab.activeBackground": "#2c302c",
    "tab.activeForeground": "#fff",
    "tab.inactiveModifiedBorder": "#bf616a",
    "tab.activeModifiedBorder": "#bf616a"
  },
  "editor.tokenColorCustomizations": {
    "[Nord]": {
      "functions": "#b96faa",
      "numbers": "#ebcb8b",
      "variables": "#8fbcbb",
      "keywords": "#df6a76",
      "types": "#d08870"
    }
  },

  "editor.formatOnPaste": true,
  "editor.minimap.enabled": false,
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "editor.tabCompletion": "on",

  "prettier.jsxSingleQuote": true,
  "prettier.semi": false,
  "prettier.singleQuote": true,
  "prettier.arrowParens": "avoid",
  "prettier.enable": true,
  "prettier.tabWidth": 2,
  "prettier.bracketSpacing": true,
  "css.validate": true,
  "vim.useSystemClipboard": true,
  "explorer.sortOrder": "type",
  "editor.suggestSelection": "first",
  "editor.cursorBlinking": "solid",
  "terminal.external.linuxExec": "x-terminal-emulator",
  "terminal.integrated.env.linux": {
    "VSCODE_INTEGRATED_TERMINAL": "true"
  },
  "editor.fontFamily": "'FiraCode Nerd Font', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
  "editor.fontLigatures": false,
  "terminal.integrated.tabs.enabled": true,
  "workbench.startupEditor": "none",
  "explorer.confirmDelete": false,
  "workbench.colorTheme": "Tokyo Night Storm",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "keyboard.dispatch": "keyCode",
  "go.toolsManagement.autoUpdate": true,
  "editor.fontSize": 15,
  "vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",
  "haskell.manageHLS": "GHCup",
  "totalTypeScript.hideAllTips": false,
  "totalTypeScript.hideBasicTips": false,
  "editor.cursorSmoothCaretAnimation": "explicit",
  "explorer.confirmDragAndDrop": false
}
